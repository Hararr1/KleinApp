<UserControl x:Class="KleinMessage.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KleinMessage.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="380"  >
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>




            <!--<Border CornerRadius="0 20 20 0" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#EFEFEF" Offset="0.0"/>
                        <GradientStop Color="#52FFEE" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>-->

            <StackPanel>
                <Image Source="/Assets/logo.png" Width="100"/>
                <TextBlock Text="KleinApp" FontFamily="Sitka Text"
                               FontWeight="Light" FontSize="25" 
                                HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">

                    <TextBox x:Name="UsernameTextBox"                    
                        FontFamily="Sitka Text"
                         Margin="65 0 0 0"
                         FontWeight="Light"
                         
                         FontSize="20"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         Width="235"
                         Opacity="0.6" GotFocus="ClickEvent"/>
                    <Image Source="/Assets/username.png" Width="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                           Opacity="0.5"/>
                </StackPanel>
                <Label x:Name="UsernameLabel"
                        Width="250" Height="2"
                        Background="Black"
                        Opacity="0.5"/>


                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">

                    <PasswordBox x:Name="PasswordTextBox" FontFamily="Sitka Text"
                             Margin="65 0 0 0"
                         FontWeight="Light"
                         
                         FontSize="20"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         Width="235"
                         Opacity="0.6" GotFocus="ClickEventPassword"/>
                    <Image Source="/Assets/padlock.png" Width="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                           Opacity="0.5"/>
                </StackPanel>
                <Label  x:Name="PasswordLabel"
                        Width="250" Height="2"
                        Background="Black"
                        Opacity="0.5"/>
                <TextBlock x:Name="RequestMessage"
                           HorizontalAlignment="Center" Margin="0 10 0 0"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Visibility="{Binding IsErrorVisible, 
                    Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>


                <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
                    <Button x:Name="LogIn" Style="{StaticResource RoundButtonStyle}" Width="100" Height="40" Content="LOGIN" Margin="60 0 60 0"/>
                    <Button x:Name="Register" Style="{StaticResource RoundButtonStyle}" Width="100" Height="40" Content="REGISTER"/>
                </StackPanel>

            </StackPanel>





        </Grid>
    </Grid>
</UserControl>
