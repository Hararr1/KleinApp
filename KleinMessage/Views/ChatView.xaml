            <ItemsControl  ItemsSource="{Binding RegistryMessages}"  Margin="5 10 5 10" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <message:FriendListControl>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <cal:ActionMessage MethodName="ChangeCurrentMessage">
                                        <cal:Parameter Value="{Binding Friend}" />
                                    </cal:ActionMessage>
                                                       
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </message:FriendListControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>



        </Grid>


        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="10">
            
            <TextBox  
                Margin="10"
                Background="#FF3399FF"  
                x:Name="MessageContent" 
                Width="350" 
                TextWrapping="Wrap" 
                AcceptsReturn="True"
                MaxLength="150" />
            
            <Button 
                x:Name="SendMessageButton"
                Style="{StaticResource noBackgroundButton}">
                <StackPanel>
                    <Image 
                        Source="/Assets/telegram-logo.png" 
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Width="50" 
                        Margin="5 10 0 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
            
       



